<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Social Media Webapp</title>
        <link rel="stylesheet" href="style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    </head>
    <body>
        <div class="nav">
            <div class="nav-left">
                <div class="nav-logo"></div> 
                <img src="ClickSlick.png" id="logo" alt="logo">
                <div class="nav-search">
                    <table class="search-wrapper">
                        <tr>
                            <td>
                                <input type="search" placeholder="search" id="search">
                            </td>
                            <td>
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="nav-right">
                <ul>
                    <!-- home -->
                    <li style="border-bottom: 6px solid white;">
                        <div class="nowrapper">
                            <a href="home.html" onmouseover="headerchange(1);" onmouseout="headerorigin(1);">
                                <i class="fa-solid fa-house"></i>
                                <p id="p1">Home</p>
                            </a>
                        </div>
                    </li>
                    <!-- Group -->
                    <li>
                        <div class="nowrapper">
                            <a href="group.html" onmouseover="headerchange(2);" onmouseout="headerorigin(2);">
                            <i class="fa-solid fa-user-group"></i>
                            <p id="p2">Groups</p>
                        </a></div>
                    </li>
                    <!-- User -->
                    <li> 
                        <div class="nowrapper">
                            <a href="user.html" onmouseover="headerchange(3);" onmouseout="headerorigin(3);">
                                <i class="fa-solid fa-user"></i>
                                <p id="p3">User</p>
                            </a> 
                        </div>
                    </li>
                    <!-- Message -->
			 	    <li> 
                        <div class="nowrapper">
                        <a href="messages.html" onmouseover="headerchange(4);" onmouseout="headerorigin(4);">
                            <i class="fa-solid fa-message"></i>
                            <p id="p4">Messages</p>
                        </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="sidepanel">
                
            </div>
            <div class="postsection">
                <div class="post">
                    <div class="post-upper">
                        <div class="wrapper"><i class="fa-solid fa-user"></i></div>
                        <input type="search" class="search-post" placeholder="Start a post">
                    </div>
                    <div class="post-lower">
                        <div class="post-icons">
                            <i class="fa-solid fa-image"></i>
                            <h1>Photo</h1>
                        </div>
                        <div class="post-icons">
                            <i class="fa-solid fa-video"></i>
                            <h1>Video</h1>
                        </div>
                        <div class="post-icons">
                            
                        </div>
                        <div class="post-icons">
                            
                        </div>
                    </div>
                </div>
                <div class="posts">
                    <% postinfo.forEach(postinfo=>{ %>
                    <h1>posted on <%= postinfo.date.toLocaleDateString() %> by <%= postinfo.user%></h1>
                    <div class="posts-iv">
                        
                    </div>
                    <h1><%=postinfo.captions%></h1>
                    <i class="fa-solid fa-heart"></i>
                    <% }) %>
                    
                </div>
            </div>
            <div class="rightsection">
            </div>
        </div>
        
    <!-- java script file link -->
    <script src="index.js"></script>
    </body>
</html>